{{> header}}
<div id="page-wrapper">
    <div class="col-lg-12">
        <div class="postbox-container">
            <h1 class="page-header">Edit Contact Details for #{{contact.name}}</h2>
            <form method="POST" action="/contacts/edit/{{contact._id}}">
                <div id="form-group">
                    <label>Name:</label>
                    <input class="form-control" name="name" type="text" value="{{contact.name}}">
                </div>
                <div id="form-group">
                    <label>Email:</label>
                    <input class="form-control" name="email" type="text" value="{{contact.email}}">
                </div>
                <div id="form-group">
                    <label>Phone Number:</label>
                    <input class="form-control" name="phonenumber" type="tel" value="{{contact.phonenumber}}">
                </div>
                <div id="form-group">
                    <label>info:</label>
                    <textarea name="info" id="" cols="30" rows="10" class="form-control">{{contact.info}}</textarea>
                </div>
                <br>
                <input class="btn btn-primary" type="submit" value="Submit">
            </form>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}