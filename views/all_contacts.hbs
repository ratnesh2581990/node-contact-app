{{> header}}
<div id="page-wrapper">
    <div class="">
        <div class="col-lg-12">
            <h1 class="page-header">All Contacts</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="">
        <div class="col-lg-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                           
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Info</th>
                            <th>&nbsp;</th>
                        </tr>      
                    </thead>  
                    <tbody>
                        {{#each contacts}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phonenumber}}</td>
                            <td>{{this.info}}</td>
                            <td>
                            <a href="/contacts/{{this._id}}" class="btn btn-info">view</a>
                            <a href="/contacts/edit/{{this._id}}" class="btn btn-warning">Edit</a>
                            <a href="javascript:void(0);" class="delete-contact btn btn-danger" data-id="{{this._id}}">Delete</a></td>
                        </tr>
                        {{/each}}    
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Info</th>
                            <th>&nbsp;</th>
                        </tr>
                    </tfoot>
                </table>        
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}